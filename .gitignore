cat > .gitignore <<'EOF'
# --- Python / Django ---
__pycache__/
*.py[cod]
*.log
*.pot
*.mo

# --- Virtual environments ---
.venv/
venv/
ENV/
env/

# --- Django / local data ---
db.sqlite3
*.sqlite3
media/
staticfiles/

# --- Secrets / env files ---
.env
.env.*
!.env.example

# --- IDEs ---
.vscode/
.idea/
.DS_Store
*.swp

# --- Tests / coverage ---
.pytest_cache/
.coverage
htmlcov/

# --- Node (if you later add Tailwind build pipeline) ---
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# --- Build artifacts ---
dist/
build/
EOF

# GitHub / CI
.coverage
htmlcov/
